form(action="${action}", method="${method}")
    each field in fields
        if (field['type'] == 'checkbox')
            label(for="${field['name']}")
                input(type="${field['type']}", id="${field['name']}", name="${field['name']}")
                ${field['label']}
        else
            label(for="${field['name']}") ${field['label']}
            input(type="${field['type']}", id="${field['name']}", name="${field['name']}")
